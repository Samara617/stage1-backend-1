// SQLite so you donâ€™t need external services. Easy to swap to Postgres later.
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Example table; adapt to your model
model AnalyzedString {
  id           String @id @default(cuid())
  value        String
  length       Int
  is_palindrome Boolean
  unique_chars Int
  word_count   Int
  sha256_hash  String @unique
  createdAt    DateTime @default(now())
}

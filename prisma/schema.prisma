generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StringItem {
  id                       String   @id                // sha256 hex of value
  value                    String   @unique
  length                   Int
  is_palindrome            Boolean
  unique_characters        Int
  word_count               Int
  character_frequency_map  Json
  created_at               DateTime @default(now())

  @@index([is_palindrome])
  @@index([length])
  @@index([word_count])
}